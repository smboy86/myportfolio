<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="720dp"
    android:background="#ffffff">

    <TextView
        android:id="@+id/battery_remain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배터리 잔량 : "/>

    <TextView
        android:id="@+id/battery_remain_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/battery_remain"
        android:layout_alignBaseline="@id/battery_remain"/>

    <TextView
        android:id="@+id/battery_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/battery_remain"
        android:paddingTop="10dp"
        android:text="배터리 상태 : "/>

    <TextView
        android:id="@+id/battery_status_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/battery_status"
        android:layout_alignBaseline="@id/battery_status"/>

    <TextView
        android:id="@+id/battery_charge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/battery_status"
        android:paddingTop="10dp"
        android:text="배터리 충전 여부 : "/>

    <TextView
        android:id="@+id/battery_charge_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/battery_charge"
        android:layout_alignBaseline="@id/battery_charge"/>

    <TextView
        android:id="@+id/battery_charge_plugged"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/battery_charge"
        android:paddingTop="10dp"
        android:text="배터리 충전 방법 : "/>

    <TextView
        android:id="@+id/battery_charge_plugged_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/battery_charge_plugged"
        android:layout_alignBaseline="@id/battery_charge_plugged"/>


</RelativeLayout>